<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin">



    <TextView
        android:id="@+id/tv_cate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Food Category"
        android:layout_below="@id/image"
        android:textSize="18sp"/>

    <Spinner
        android:id="@+id/cate_spinner"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tv_cate"></Spinner>
    <TextView
        android:id="@+id/tv_foodword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/tv_cate"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/image"
        android:textSize="18sp"
        android:text="Food Name"/>
    <EditText
        android:id="@+id/et_cate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="#FEFFFF"/>
    <TextView
        android:id="@+id/tv_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cate_spinner"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:id="@+id/sp_food"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/tv_foodword"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="19dp"
        android:layout_toRightOf="@id/cate_spinner"></Spinner>

    <TextView
        android:id="@+id/tv_foodResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sp_food"
        android:layout_marginTop="10dp"
        android:textSize="18sp"/>

     <EditText
         android:id="@+id/et_quantity"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/tv_foodResult"
         android:layout_marginTop="20dp"
         android:hint="SERVING"
         android:inputType="number"/>
     <TextView
         android:id="@+id/tv_measure"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/et_quantity"
         android:layout_below="@id/tv_foodResult"
         android:layout_marginTop="30dp"
         android:layout_marginRight="20dp"
         android:textSize="18sp"
         />
    <Button
        android:id="@+id/bt_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_measure"
        android:layout_below="@id/tv_foodResult"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:text="ADD"/>



    <EditText android:id="@+id/edit_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:inputType="text"
        android:hint="@string/edit_food"/>

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_food"
        android:layout_marginTop="10dp"/>

    <Button android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_search"
        android:text="@string/btnSearch"
        android:onClick="@string/btnSearch"/>

    <Button
        android:id="@+id/bt_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_search"
        android:layout_toRightOf="@id/btnSearch"
        android:text="ADD Food"/>


    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"/>




</RelativeLayout>