<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="60dp"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >
    <ImageView
        android:id="@+id/background_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
       android:layout_marginStart="80dp"
        android:background="@drawable/background_icon"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/login_icon"
            android:layout_width="55dp"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_icon" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="210dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/login_icon"
            android:paddingLeft="5dp"
            android:background="@drawable/bg_ben2"
            android:hint="User Name"

            android:textColor="#4D4E4D"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="37dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/et_username"
            android:background="@drawable/password_icon"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="210dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/et_username"
            android:layout_toRightOf="@id/login_icon"
            android:background="@drawable/bg_ben2"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:textColor="#4D4E4D"
            android:textSize="16sp"
            />

        <Button
            android:id="@+id/btn_login2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/bg_btn"
            android:text="Login"
            android:layout_below="@id/et_password"

            android:textColor="#fff"
            android:textSize="20sp"/>

    </RelativeLayout>


</LinearLayout>