<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_height"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_ben3"
        android:hint="Height: 180cm"
        android:inputType="numberDecimal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#4D4E4D"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_weight"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_ben3"
        android:hint="Weight: 60kg"
        android:inputType="numberDecimal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#4D4E4D"
        android:textSize="14sp"
       />




    <RelativeLayout
        android:id="@+id/relativelevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <TextView android:text= "@string/level"
            android:id="@+id/leveltext"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"/>

        <Spinner
            android:id="@+id/et_level"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/leveltext"

            />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_steps"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_ben3"
        android:hint="Steps Per Mile: 1000"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#4D4E4D"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_next2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/bg_btn"
        android:text="Next"
        android:textColor="#fff"
        android:textSize="20sp" />

</LinearLayout>