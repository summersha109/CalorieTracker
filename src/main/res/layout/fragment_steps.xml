<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/step_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="70dp"
        android:background="@drawable/images"/>

    <TextView
        android:id="@+id/tv_mystep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/step_image"
        android:layout_marginTop="10dp"
        android:text="My steps"
        android:textSize="30dp"
        android:textColor="#4D4E4D"/>

    <EditText
        android:id="@+id/et_steps"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tv_mystep"
        android:layout_marginTop="10dp"
        android:textColor="#4D4E4D"
        android:hint="Steps"/>

    <Button
        android:id="@+id/bt_step"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/et_steps"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_btn"
        android:textColor="#FFFFFF"
        android:text="ADD STEPS"/>

    <Button
        android:id="@+id/bt_showall"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/et_steps"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/bt_step"
        android:background="@drawable/bg_btn"
        android:text="Show All"
        android:textColor="#FFFFFF" />
    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_step" />

    <TextView
        android:id="@+id/tv_showall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/bt_step" />

    <EditText
        android:id="@+id/et_update"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/tv_showall"
        android:layout_marginTop="20dp"
        android:hint="Step ID - steps"/>

    <Button
        android:id="@+id/bt_update"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/tv_showall"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/et_update"
        android:background="@drawable/bg_btn"
        android:textColor="#FFFFFF"
        android:text="Update Step" />

</RelativeLayout>